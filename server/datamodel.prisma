type User {
  id: ID! @id
  name: String!
  projects: [Project]!
}

type Project {
  name: String!
  id: ID! @id
  issues: [Issue]!
  lead: User! @relation(link: INLINE)
}

type Comment {
  author: User! @relation(link: INLINE)
  id: ID! @id
  content: String!
  issue: Issue! @relation(link: INLINE)
}

type Issue {
  title: String!
  content: String!
  author: User! @relation(link: INLINE)
  id: ID! @id
  status: String!
  project: Project! @relation(link: INLINE)
  comments: [Comment]!
}
